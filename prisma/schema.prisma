model Game {
  id            String   @id @default(cuid())
  date          DateTime @default(now())
  status        String   @default("SCHEDULED") // SCHEDULED, LIVE, FINAL
  
  // Game Rules (Configurable per game)
  quarters          Int @default(4)
  minutesPerQuarter Int @default(12)
  
  // Game State
  currentQuarter    Int @default(1)
  gameClock         String? // e.g., "12:00"
  
  homeTeamId    String
  homeTeam      Team     @relation("HomeGames", fields: [homeTeamId], references: [id])
  homeScore     Int      @default(0)
  
  awayTeamId    String
  awayTeam      Team     @relation("AwayGames", fields: [awayTeamId], references: [id])
  awayScore     Int      @default(0)
  
  scorekeeperId String?
  scorekeeper   User?    @relation("Scorekeeper", fields: [scorekeeperId], references: [id])
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Player {
  id        String  @id @default(cuid())
  name      String
  number    Int?
  position  String
  height    String
  weight    String
  teamId    String?
  team      Team?   @relation(fields: [teamId], references: [id], onDelete: SetNull)
  ovr       Int     @default(60)
  archetype String? // e.g. "Playmaking Shot Creator"
  avatar    String?
  // Stats (Averages & Totals)
  mpg       Float?  @default(0.0) // Minutes Per Game
  ppg       Float   @default(0.0)
  rpg       Float   @default(0.0)
  apg       Float   @default(0.0)
  spg       Float   @default(0.0)
  bpg       Float   @default(0.0)
  tov       Float   @default(0.0)
  
  // Shooting Splits (Calculated from totals)
  fgPct     Float   @default(0.0)
  threePtPct Float  @default(0.0)
  ftPct     Float   @default(0.0)

  // Raw Stat Totals (For calculation)
  totalPoints  Int  @default(0)
  totalRebounds Int @default(0)
  totalAssists Int  @default(0)
  totalSteals  Int  @default(0)
  totalBlocks  Int  @default(0)
  totalTurnovers Int @default(0)
  
  fgm         Int   @default(0)
  fga         Int   @default(0)
  threePtm    Int   @default(0)
  threePta    Int   @default(0)
  ftm         Int   @default(0)
  fta         Int   @default(0)
  
  // Registration / Prospect Fields
  isProspect Boolean @default(false)
  email      String?
  phone      String?
  school     String?
  hometown   String?
  dob        String?

  // Combine Drill Results (Raw Metrics)
  drillScoreSpeed    Float? // Seconds
  drillScoreVertical Float? // Inches
  drillScoreAgility  Float? // Seconds
  drillScoreStrength Int?   // Reps
  drillScoreShooting Int?   // Make count / Score
  
  // Physical Attributes (Derived from Drills - Static 0-99)
  speed       Int @default(60)
  vertical    Int @default(60)
  strength    Int @default(60)
  agility     Int @default(60) // Adding Agility based on benchmarks
  athleticism Int @default(60) // Composite of above

  // Skill Attributes (Progression Based 0-99)
  insideScoring    Int @default(60)
  midRangeScoring  Int @default(60)
  threePointScoring Int @default(60)
  passing          Int @default(60)
  ballHandling     Int @default(60)
  perimeterDefense Int @default(60)
  postDefense      Int @default(60)
  steals           Int @default(60)
  blocks           Int @default(60)
  rebounding       Int @default(60)
  dunking          Int @default(60)
  
  gamesPlayed Int    @default(0)
  progression String? // JSON string storing mini-target progress
   
  waiverSignedAt DateTime?
  attendance Attendance[]
  notes      ScoutingNote[]
  user       User?
}

model Attendance {
  id        String   @id @default(cuid())
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  date      DateTime @default(now())
  status    String   // "ON_TIME", "LATE", "NO_SHOW"
  
  @@index([playerId])
}

model ScoutingNote {
  id        String   @id @default(cuid())
  content   String
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())

  @@index([playerId])
  @@index([authorId])
}



// --- COMMERCE & FINANCIAL MODELS ---

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int      // In cents (e.g. 2999 = $29.99)
  image       String   // URL
  category    String   // MERCH, EQUIPMENT, ACCESSORY
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  orderItems  OrderItem[]
}

// For specific Ticket configurations per game (e.g. VIP vs GA)
model TicketType {
  id          String   @id @default(cuid())
  gameId      String
  name        String   // "General Admission", "Courtside", "VIP"
  price       Int      // Cents
  capacity    Int      // Max tickets available
  sold        Int      @default(0)
  
  orderItems  OrderItem[]
}

model SubscriptionPlan {
  id          String   @id @default(cuid())
  name        String   // "Rookie", "Pro", "All-Star"
  price       Int      // Cents per month
  stripePriceId String // Stripe API ID
  features    String   // JSON array of features
  
  users       User[]
}

model Order {
  id              String      @id @default(cuid())
  userId          String?
  user            User?       @relation(fields: [userId], references: [id])
  guestEmail      String?
  total           Int         // Cents
  status          String      @default("PENDING") // PENDING, PAID, FAILED, REFUNDED
  stripeSessionId String?     @unique
  createdAt       DateTime    @default(now())
  
  items           OrderItem[]
  
  @@index([userId])
}

model OrderItem {
  id            String   @id @default(cuid())
  orderId       String
  order         Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  // Dynamic Polymorphism (one of these should be set)
  productId     String?
  product       Product? @relation(fields: [productId], references: [id])
  
  ticketTypeId  String?
  ticketType    TicketType? @relation(fields: [ticketTypeId], references: [id])
  
  quantity      Int      @default(1)
  priceAtTime   Int      // Capture price at purchase to avoid data drift
  
  @@index([orderId])
}
