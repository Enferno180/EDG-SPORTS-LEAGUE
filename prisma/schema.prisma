model Team {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  logo           String
  wins           Int      @default(0)
  losses         Int      @default(0)
  primaryColor   String
  secondaryColor String
  
  // Team Stats / Power Rankings
  offRating      Float    @default(0.0)
  defRating      Float    @default(0.0)
  netRating      Float    @default(0.0)
  teamPpg        Float    @default(0.0)
  teamRpg        Float    @default(0.0)
  teamApg        Float    @default(0.0)

  players        Player[]
  
  homeGames      Game[]   @relation("HomeGames")
  awayGames      Game[]   @relation("AwayGames")
}

